<Page x:Class="Workers_base1._0.Authentication_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Workers_base1._0"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1500"
      Title="Authentication_page">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://wallpaperaccess.com/full/1236531.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock FontSize="40" Foreground="White" HorizontalAlignment="Center">LOGIN:</TextBlock>
        <TextBox Text="{Binding LoginView}" VerticalAlignment="Center" FontSize="40" Margin="190,10"></TextBox>
        <TextBlock Grid.Row="1" FontSize="40" Foreground="White" HorizontalAlignment="Center">PASSWORD:</TextBlock>
        <TextBox Text="{Binding PasswordView}" Grid.Row="1" VerticalAlignment="Center" FontSize="40" Margin="190,10"></TextBox>
        <Button Command="{Binding LogIn}" Grid.Row="2" Background="Orange" Foreground="White" FontSize="70" Margin="190,70">LOG IN</Button>
    </Grid>
</Page>
